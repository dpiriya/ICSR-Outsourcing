@model Outsourcing.ViewModelAccount.ResetPassword

@{
    ViewBag.Title = "UserResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <fieldset style="left:30px; position:relative;">
        @using (Html.BeginForm("UserResetPassword", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <h3>User Reset Password</h3>
            <div class="editor-label">
                @Html.LabelFor(model => model.SelectedUser)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.SelectedUser, Model.Users)
                @Html.ValidationMessageFor(model => model.SelectedUser)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NewPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.NewPassword)
                @Html.ValidationMessageFor(model => model.NewPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.ConfirmNewPassword)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.ConfirmNewPassword)
                @Html.ValidationMessageFor(model => model.ConfirmNewPassword)
            </div>

            <p>
                <input type="submit" value="Reset Password" />
            </p>
        }
    </fieldset>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@{
    if (Convert.ToString(ViewData["Result"]) == "True")
    {
        ViewData["Result"] = null;
        <script type="text/javascript" language="javascript">
            alert("Password Reset Successfully");
        </script>        
    }
}