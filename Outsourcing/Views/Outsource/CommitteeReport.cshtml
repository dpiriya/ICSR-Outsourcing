@model Outsourcing.ViewModel.CommitteeView

@{
    ViewBag.Title = "Committee Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <table align="center" width="400" height="200">
            <tr>
                <th><h3>Committee Report</h3>
                </th>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.MeetingDate)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.MeetingDate)
                        @Html.ValidationMessageFor(model => model.MeetingDate)
                    </div>
                </td>
                </tr><tr>
                <td>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.Authority)
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.Authority, new SelectList((System.Collections.IEnumerable)ViewData["Authorities"], "AuthorityID", "AuthorityDesignation"), "Select Authority")
                        @Html.ValidationMessageFor(model => model.Authority)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <p>
                        <input type="submit" class="SubmitViolet1" value="Report" onclick="target = '_blank';" />
                    </p>
                </td>
            </tr>
        </table>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(document).ready(function () {
        $("#MeetingDate").attr('readOnly', 'true');
        $("#MeetingDate").attr("placeholder", "dd/MM/yyyy").datepicker({ dateFormat: "dd/mm/yy", minDate: "-1y", maxDate: "3m", beforeShowDay: function (date) { var day = date.getDay(); return [(day != 1 && day != 3 && day != 4 && day != 5 && day != 6 && day != 0), ''] } });
    });
</script>
}
