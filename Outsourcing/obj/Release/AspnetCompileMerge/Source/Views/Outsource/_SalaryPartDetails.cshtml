    <script type="text/javascript">
        
        $("#EmployeeESIC,#ProfessionalTax,#TotalDeduction").change(function () {
            var add = parseInt($("#EmployeeESIC").val()) + parseInt($("#ProfessionalTax").val()) + parseInt($("#TotalDeduction").val());
            $("#NetSalary").val(add);
        });
        $("#EmployerESIC,#TotalDeduction").change(function () {
            var add = parseInt($("#EmployerESIC").val()) + parseInt($("#TotalContribution").val());
            $("#GrossTotal").val(add);
