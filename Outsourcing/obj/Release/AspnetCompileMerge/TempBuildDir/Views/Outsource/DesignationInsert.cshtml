@model Outsourcing.ViewModel.DesignationView

@{
    ViewBag.Title = "DesignationInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Designation</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset style="left:30px; position:relative;">
       
        <div class="editor-label">
            @Html.LabelFor(model => model.DesignationCode)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DesignationCode)
            @Html.ValidationMessageFor(model => model.DesignationCode)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DesignationName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DesignationName)
            @Html.ValidationMessageFor(model => model.DesignationName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.LowerAgeLimit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LowerAgeLimit)
            @Html.ValidationMessageFor(model => model.LowerAgeLimit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UpperAgeLimit)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UpperAgeLimit)
            @Html.ValidationMessageFor(model => model.UpperAgeLimit)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Qualifications)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Qualifications)
            @Html.ValidationMessageFor(model => model.Qualifications)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Experience)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Experience)
            @Html.ValidationMessageFor(model => model.Experience)
        </div>
        <br />
        <p>
            <input type="submit" class="SubmitViolet" value="Create" />
        </p>
    </fieldset>
}
<br />
<div>
    @Html.ActionLink("Back to List", "DesignationList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@{
    if (Convert.ToString(ViewData["result"]) != "" &&  Convert.ToString(ViewData["result"]) != null)
    {
        ViewData["result"] = null;
        <script type="text/javascript" language="javascript">
            alert("The Designation Added Successfully");
        </script>
    }
}
