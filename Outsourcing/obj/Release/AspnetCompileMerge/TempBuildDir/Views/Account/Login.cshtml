@model Outsourcing.Models.LoginModel
<link href="~/Content/TableView.css" rel="stylesheet" type="text/css" />
<hgroup class="title">
    
</hgroup>

<section id="loginForm">

@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset class="FieldsetLogin">
        <table class="TableLogin" align="center">
            <tr><td colspan="2" align="center"><h2>Log in</h2></td></tr>
            <tr>
                <td>@Html.LabelFor(m => m.UserName)</td>
                <td>
                    @Html.TextBoxFor(m => m.UserName)
                    @Html.ValidationMessageFor(m => m.UserName)
                </td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.Password)</td>
                <td>
                    @Html.PasswordFor(m => m.Password)
                    @Html.ValidationMessageFor(m => m.Password)
                </td>
            </tr>
            <tr><td colspan="2" align="center"> @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m => m.RememberMe)</td></tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="submit" value="Log in" /> <br /><br />
                   <!-- @@Html.ActionLink("Register", "Register") if you don't have an account. -->
                </td>
            </tr>
        </table>
    </fieldset>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
